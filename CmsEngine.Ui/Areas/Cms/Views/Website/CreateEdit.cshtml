@model CmsEngine.Data.EditModels.WebsiteEditModel
@*@section styles{

  }*@

@section Breadcrumb {
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="~/cms">Dashboard</a></li>
    <li class="breadcrumb-item"><a href="~/cms/website">@ViewBag.PageTitle</a></li>
    <li class="breadcrumb-item active">@ViewBag.PageType</li>
  </ol>
}

<div class="row">
  <div class="col-md-6">
    <div class="card">
      <div class="card-header">
        <strong>@ViewBag.PanelTitle</strong>
      </div>
      <form asp-area="Cms" asp-controller="Website" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal">
        <div class="card-body">
          @if (!Model.IsNew)
          {
              <input asp-for="Id" type="hidden" />
          }

          <div asp-validation-summary="All" class="text-danger"></div>
          <div class="form-group row">
            <label asp-for="Name" class="col-md-3 form-control-label"></label>
            <div class="col-md-9">
              <input asp-for="Name" class="form-control" />
              <span asp-validation-for="Name" class="text-danger"></span>
            </div>
          </div>
          <div class="form-group row">
            <label asp-for="Description" class="col-md-3 form-control-label"></label>
            <div class="col-md-9">
              <textarea asp-for="Description" class="form-control"></textarea>
              <span asp-validation-for="Description" class="text-danger"></span>
            </div>
          </div>
          <div class="form-group row">
            <label asp-for="Culture" class="col-md-3 form-control-label"></label>
            <div class="col-md-9">
              <input asp-for="Culture" class="form-control" />
              <span asp-validation-for="Culture" class="text-danger"></span>
            </div>
          </div>
          <div class="form-group row">
            <label asp-for="UrlFormat" class="col-md-3 form-control-label"></label>
            <div class="col-md-9">
              <input asp-for="UrlFormat" class="form-control" />
              <span asp-validation-for="UrlFormat" class="text-danger"></span>
            </div>
          </div>
          <div class="form-group row">
            <label asp-for="DateFormat" class="col-md-3 form-control-label"></label>
            <div class="col-md-9">
              <input asp-for="DateFormat" class="form-control" />
              <span asp-validation-for="DateFormat" class="text-danger"></span>
            </div>
          </div>
          <div class="form-group row">
            <label asp-for="SiteUrl" class="col-md-3 form-control-label"></label>
            <div class="col-md-9">
              <input asp-for="SiteUrl" class="form-control" />
              <span asp-validation-for="SiteUrl" class="text-danger"></span>
            </div>
          </div>
        </div>
        <div class="card-footer">
          <button type="submit" class="btn btn-primary"><i class="fa fa-dot-circle-o"></i> Save</button>
        </div>
      </form>
    </div>
  </div>
</div>

@section scripts{
  @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
